<div class="form-container">
    <h2>Comment</h2>
    <div id="error-comment" style="color: red;" hidden></div>

    <form action="/faculty/member/{{faculty_id}}/comment" method="POST" class="comment-form" id="comment-form">
        <input type="text" name="title" placeholder="Title" id="comment_title">
        <input type="text" name="content" placeholder="Comment" id="comment_content">
        <input type="number" step=".01"  name="rating" placeholder="5.0" id="comment_rating">
        <input type="submit" value="Comment">
    </form>
</div>