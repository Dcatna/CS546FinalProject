<div class="form-container">
    <h2>Sign In</h2>
    <div id="error-signin" style="color: red;" {{#unless errors}}hidden{{/unless}}>
        {{#if errors}}{{errors}}{{/if}}
    </div>


        <form action="/login" method="POST" class="signin-form" id="signin-form">
        <input type="email" name="email" placeholder="Email" id="signin-email">
        <input type="password" name="password" placeholder="Password" id="signin-password">

        <input type="submit" value="Sign In">
    </form>
</div>