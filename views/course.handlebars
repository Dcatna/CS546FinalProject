<h1>{{this.course_section}}</h1><br>
<em>Professor:</em> {{instructor}}<br>
<em>Location:</em> {{location}}<br>
<em>Meeting Pattern:</em> {{days}} {{time}}

<h2>View in Schedule:</h2>

{{#if schedules}}
<form id="add-to-schedule" action="/course/{{_id}}" method="POST">
    <select id="schedule-select" name="scheduleSelect">
        {{#each schedules}}
        {{#if selected}}
        <option value="{{name}}" selected>{{name}}</option>
        {{else}}
        <option value="{{name}}">{{name}}</option>
        {{/if}}
        {{/each}}
    </select><br><br>

    <label for="submit-add-to-schedule">Add to Schedule</label><br>
    <input id="submit-add-to-schedule" type="submit">

</form>
{{else}}
<h3>No schedules found</h3>
{{/if}}

{{#each schedules}}

<div class="potential-schedule" name="{{name}}" hidden>
    {{#if conflicting}}
    <p class="warning">Warning: conflicting times</p>
    {{/if}}
    {{#if alreadyContains}}
    <p class="already-added">Section added</p>
    {{/if}}
    <h1>{{name}}</h1>

    {{> schedule}}

</div>
{{/each}}

